# Database Configuration
DB_TYPE=sqlite # postgres, mysql, or sqlite
DB_HOST=localhost
DB_PORT=5432 # 3306 for MySQL
DB_NAME=collab-doc
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_DSN=file:./data/collab-doc.db?_fk=1 # For SQLite

# Server Configuration
PORT=8080
ENVIRONMENT=development # production or development
DEBUG_MODE=true

# Authentication
JWT_SECRET=your_very_strong_secret_key_here
JWT_EXPIRATION=24h # e.g., 1h, 24h, 72h
ADMIN_APPROVAL_REQUIRED=true

# CORS Settings (Development)
FRONTEND_URL=http://localhost:3000
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_ALLOW_HEADERS=Authorization,Content-Type

# Rate Limiting
RATE_LIMIT=100 # requests per minute
ADMIN_RATE_LIMIT=50 # admin-specific rate limit

# Email (Optional for user notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=email_password
EMAIL_FROM=noreply@example.com